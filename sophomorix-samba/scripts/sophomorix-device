    exit 1;
}


# new checking all files
foreach my $device_file (@filelist){
    my $filename = basename($device_file);
    $school_token=$sophomorix_config{'FILES'}{'DEVICE_FILE'}{$filename}{'SCHOOL_TOKEN'};
    $prefix=$sophomorix_config{'FILES'}{'DEVICE_FILE'}{$filename}{'PREFIX'};
    open(DEVICES,"$device_file") || 
         die "ERROR: $device_file not found!";  
    while(<DEVICES>){
        &analyze_line($_,$school_token,$prefix);
    }
    close(DEVICES);
}

