# ===========================================================================
# Synchronizing ExamAccounts and Workstations
# ===========================================================================

# calculate according to file
#$ou="BSZLEO";
#$school_token="bsz";


if ($no_sync==0){ # $no_sync==0 -> SYNC
    if (not exists $ou_created{$ou}){
        # create ou
        &AD_ou_add({ldap=>$ldap,
                    root_dse=>$root_dse,
                    ou=>$ou,
                    school_token=>$school_token,
                    creationdate=>$time_stamp_AD,
                    sophomorix_config=>\%sophomorix_config,
             });
        # remember ou
        $ou_created{$ou}="already created";
    }
    &print_title("Killing ExamAccounts:");
    my $kill_count=1;
    foreach my $exam_account (@killing_examaccounts){
        print "   * Killing ExamAccount $exam_account ...\n";
        &AD_user_kill({ldap=>$ldap,
                       root_dse=>$root_dse,
                       login=>$exam_account,
                       user_count=>$kill_count,
                     });
        #system("/usr/sbin/sophomorix-kill --killuser $exam_account");
    }
    &print_title("Adding ExamAccounts:");
    my $add_count=1;
    foreach my $exam_account (@adding_examaccounts){
        my $role="examaccount";
        my ($room,$user,@rest)=split(/;/,$exam_account);
        $plain_password=&get_plain_password($role,@passwort_zeichen);
	print "USER:  $user   ROOM:  $room\n";
        &AD_user_create({ldap=>$ldap, 
                         root_dse=>$root_dse,
                         user_count=>$add_count,
                         login=>$user,
                         group=>$room,
                         firstname_ascii=>"Exam",
                         surname_ascii=>"Account",
                         firstname_utf8=>"Exam",
                         surname_utf8=>"Account",
                         birthdate=>$birthdate,
                         plain_password=>$plain_password,
                         ou=>$ou,
                         role=>"examaccount",
                         type=>"room",
                         school_token=>$school_token,
                         creationdate=>$time_stamp_AD,
                         tolerationdate=>"---",
                         deactivationdate=>"---",
                         status=>"P",
                         file=>$file,
                       });
        $add_count++;
        # make sure that the room exists
        # use the saved, tokened value
        my $room_saved=$devices_file{'domcomputers'}{$user}{'ROOM'};
        my $examaccount_token=$school_token."-".$DevelConf::examaccount;
        &AD_group_create({ldap=>$ldap,
                          root_dse=>$root_dse,
                          group=>$room_saved,
                          description=>$room_saved,
                          ou=>$ou,
                          school_token=>$school_token,
                          status=>"P",
                          type=>"room",
                          creationdate=>$time_stamp_AD,
                         });
        # add examaccount to its room
        &AD_group_addmember({ldap => $ldap,
                             root_dse => $root_dse, 
                             group => $room_saved,
                             addmember => $user,
                            });   
        #system("/usr/sbin/sophomorix-useradd --examaccount $u --unix-group $g");
        #system("/usr/sbin/sophomorix-passwd -u $u --random --hide");
        #system("/usr/sbin/sophomorix-quota -u $u");
    }
    &print_title("Killing Workstations:");
    my $count=1;
    foreach my $computer (@killing_computers){
        &AD_computer_kill({ldap=>$ldap,
                           root_dse=>$root_dse,
                           workstation=>$computer,
                           count=>$count,
                         });
        $count++;
        #system("/usr/sbin/sophomorix-kill --killuser $computer");
    }
    &print_title("Adding Workstations:");
    my $ws_count=1;
    foreach my $computer (@adding_computers){
        my ($room,$user,@rest)=split(/;/,$computer);
        # using saved, tokened values
        my $room_saved=$devices_file{'domcomputers'}{$user}{'ROOM'};
        my $ws_saved=$devices_file{'domcomputers'}{$user}{'WORKSTATION'};
        &AD_computer_create({ldap=>$ldap, 
                             root_dse=>$root_dse,
                             ws_count=>$ws_count,
                             name=>$ws_saved,
                             room=>$room_saved,
                             ou=>$ou,
                             role=>"workstation",
		             type=>"roomws",
                             school_token=>$school_token,
                             creationdate=>$time_stamp_AD,
                           });
        $ws_count++;
        #system("/usr/sbin/sophomorix-useradd --computer $u_comp");
        #system("/usr/sbin/sophomorix-passwd --force -u $u_comp --pass $pass");
    }


    # DNS Hosts
    &print_title("Killing DNS Hosts:");
    my $dns_node_count=1;
    foreach my $dns_node (@killing_dnshosts){
## ??????????????????? read data from hash
#        &AD_dns_kill({ldap=>$ldap, 
#                      root_dse=>$root_dse,
#                      dns_zone=>$zone,
#                      dns_node=>$name,
#                      dns_ipv4=>$ipv4,
#                      smb_pwd=>$smb_pwd,
#                    });

        $dns_node_count++;
        
    }

    &print_title("Adding DNS Hosts:");
    $dns_node_count=1;
    foreach my $dns_line (@adding_dnshosts){
        &AD_dns_create({ldap=>$ldap, 
                        root_dse=>$root_dse,
                        dns_line=>$dns_line,
                        smb_pwd=>$smb_pwd,
                           });
        $dns_node_count++;
    }




    &log_script_exit("",0,1,0,@arguments);
}


