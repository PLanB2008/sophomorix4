    # DNS Zones
    print "\n";
    $count=$#killing_dnszones+1;
    &print_title("DNS-Zones that must be killed: ($count)");
    foreach my $dns_zone (@killing_dnszones){
        print "KILL: $dns_zone\n";
    }
    print "\n";
    $count=$#adding_dnszones+1;
    &print_title("DNS-Zones that must be added: ($count)");
    foreach my $dns_zone (@adding_dnszones){
        print "ADD: $dns_zone\n";
    }

    # DNS Hosts
    print "\n";
    $count=$#killing_dnshosts+1;
    &print_title("DNS-Hosts that must be killed: ($count)");
    foreach my $dns_node (@killing_dnshosts){
        print "KILL: $dns_node\n";
    }
    print "\n";
    $count=$#adding_dnshosts+1;
    &print_title("DNS-Hosts that must be added: ($count)");
    foreach my $dns_node (@adding_dnshosts){
        print "ADD: $dns_node\n";
    }

    print "\n--no-sync  finished. Nothing changed!\n";
#    print Dumper(%domcomputers_system);
#    print Dumper(%rooms_system);
#    print Dumper(%examaccounts_system);
#    print Dumper(%dnszones_system);
#    print Dumper(%dnshosts_system);
#    print Dumper(%devices_system);

#    print Dumper(%devices_file);
    exit;
} 


