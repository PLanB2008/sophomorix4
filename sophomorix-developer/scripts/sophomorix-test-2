                                 );

$Conf::log_level=1;
my $help=0;

my $copy_devfile_1=0;
my $copy_devfile_2=0;
my $copy_devfile_3=0;
my $copy_devfile_4=0;
my $copy_devfile_5=0;
my $test_ws_1=0;
my $test_ws_2=0;
