# Bibliotheken
use strict;
use Getopt::Long;
Getopt::Long::Configure ("bundling");
use Sophomorix::SophomorixBase qw(
                                 print_line
                                 print_title
                                 check_options
                                 time_stamp_AD 
                                 get_passwd_charlist
                                 get_plain_password
                                 );
use Sophomorix::SophomorixSambaAD qw(
                                 AD_school_create
                                 AD_bind_admin
                                 AD_unbind_admin
                                 AD_user_create
                                 AD_group_create
                                 AD_group_addmember
                                 AD_user_kill
                                 AD_dns_get
                                 AD_object_search
                                 AD_debug_logdump
                                 AD_get_name_tokened
                                    );
use Sophomorix::SophomorixTest qw(
                                 AD_object_nonexist
                                 AD_test_object
                                 directory_tree_test
                                 run_command
                                 );

$Conf::log_level=1;
my $help=0;
my $full=0;



my $add_admin=0;
my $test_add_admin=0;

my $mod_admin=0;
my $test_mod_admin=0;

my $kill_admin=0;
my $test_kill_admin=0;

my $verbose_options="";

my $testopt=GetOptions(
           "help|h" => \$help,
           "full|f" => \$full,
           "verbose|v+" => \$Conf::log_level,
           "add-admin" => \$add_admin,
           "test-add-admin" => \$test_add_admin,
           "mod-admin" => \$mod_admin,
           "test-mod-admin" => \$test_mod_admin,
           "kill-admin" => \$kill_admin,
           "test-kill-admin" => \$test_kill_admin,
  );


# PrÃ¼fen, ob Optionen erkannt wurden, sonst Abbruch
&check_options($testopt);



if ($Conf::log_level==1){
    $verbose_options="";
} elsif ($Conf::log_level==2){
    $verbose_options="-v";
} elsif ($Conf::log_level==3){
    $verbose_options="-vv";
}




my ($ldap,$root_dse) = &AD_bind_admin();
my $root_dns=&AD_dns_get($root_dse);

my $testdata="/usr/share/sophomorix-developer/testdata";


# --help
if ($help==1) {
   # Scriptname ermitteln
   my @list = split(/\//,$0);
   my $scriptname = pop @list;
   # Befehlsbeschreibung
   print('
sophomorix-test-5 tests the addition of admins.

Options
  -h  / --help

  Admins:
  sophomorix-test-5 --add-admin  
    add some admins
  sophomorix-test-5 --test-add-admin
    test the added admins

  sophomorix-test-5 --mod-admin
    modify added admins
  sophomorix-test-5 --test-mod-admin
    test modified admins

  sophomorix-test-5 --kill-admin
    kill all added admins
  sophomorix-test-5 --test-kill-admin
    test killed admins

');
   print "\n";
   exit;
}





############################################################
# Check preliminaries
############################################################

# --full
if ($full==1){
    $add_admin=1;
    $mod_admin=1;
    $kill_admin=1;
    $test_add_admin=1;
    $test_mod_admin=1;
    $test_kill_admin=1;
}

############################################################
# Add admins
############################################################
# --add-admin  
if ($add_admin==1){
    # admin in OU=bsz
    &run_command("sophomorix-admin $verbose_options --create admin-bsz-66 --school bsz --password 'Muster!'");
    &run_command("sophomorix-admin $verbose_options --create admin-abc-666 --school abc --password 'Muster!'");
    # admin in OU=default-school
    &run_command("sophomorix-admin $verbose_options --create admin-66 --school default-school --password 'Muster!'");
    &run_command("sophomorix-admin $verbose_options --create admin-666 --school default-school --password 'Muster!'");
    # admin in OU=default-school
    &run_command("sophomorix-admin $verbose_options --create global-admin-66 --school global --password 'Muster!'");
    &run_command("sophomorix-admin $verbose_options --create global-admin-666 --school global --password 'Muster!'");

}

############################################################
# Test added admins
############################################################
# --test-add-admin  
if ($test_add_admin==1){
    ##### Testing the users
    # admin-bsz-66
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=admin-bsz-66,OU=Management,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"bsz Admin",
                   givenName=>"bsz",
                   name=>"admin-bsz-66",
                   sAMAccountname=>"admin-bsz-66",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\management\\admin-bsz-66",
                   unixHomeDirectory=>"/home/schools/bsz/management/admin-bsz-66",
                   sn=>"Admin",
                   userPrincipalName => "admin-bsz-66@".$root_dns,
                   sophomorixAdminClass => "bsz-admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "bsz",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "bsz-admins|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });
    ##### Testing the users group
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=bsz-admins,OU=Management,OU=bsz,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"bsz-admins",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixStatus=>"P",
                   sophomorixType=>"admins",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "bsz",
                   memberOf => "global-admins",
                  });


    # admin-abc-666
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=admin-abc-666,OU=Management,OU=abc,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"abc Admin",
                   givenName=>"abc",
                   name=>"admin-abc-666",
                   sAMAccountname=>"admin-abc-666",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\abc\\management\\admin-abc-666",
                   unixHomeDirectory=>"/home/schools/abc/management/admin-abc-666",
                   sn=>"Admin",
                   userPrincipalName => "admin-abc-666@".$root_dns,
                   sophomorixAdminClass => "abc-admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "abc",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "abc",
                   sophomorixSchoolname => "abc",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "abc-admins|abc-wifi|abc-internet|abc-webfilter|abc-intranet|abc-printing",
                  });
    ##### Testing the users group
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=abc-admins,OU=Management,OU=abc,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"abc-admins",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixStatus=>"P",
                   sophomorixType=>"admins",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "abc",
                   memberOf => "global-admins",
                  });

    # admin-66
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=admin-66,OU=Management,OU=default-school,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"default-school Admin",
                   givenName=>"default-school",
                   name=>"admin-66",
                   sAMAccountname=>"admin-66",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\default-school\\management\\admin-66",
                   unixHomeDirectory=>"/home/schools/default-school/management/admin-66",
                   sn=>"Admin",
                   userPrincipalName => "admin-66@".$root_dns,
                   sophomorixAdminClass => "admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "default-school",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "---",
                   sophomorixSchoolname => "default-school",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "admins|wifi|internet|webfilter|intranet|printing",
                  });
    # admin-666
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=admin-666,OU=Management,OU=default-school,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"default-school Admin",
                   givenName=>"default-school",
                   name=>"admin-666",
                   sAMAccountname=>"admin-666",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\default-school\\management\\admin-666",
                   unixHomeDirectory=>"/home/schools/default-school/management/admin-666",
                   sn=>"Admin",
                   userPrincipalName => "admin-666@".$root_dns,
                   sophomorixAdminClass => "admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "default-school",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "---",
                   sophomorixSchoolname => "default-school",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "admins|wifi|internet|webfilter|intranet|printing",
                  });
    ##### Testing the users group
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=admins,OU=Management,OU=default-school,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"admins",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixStatus=>"P",
                   sophomorixType=>"admins",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "default-school",
                   memberOf => "global-admins",
                  });











    # global-admin-66
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=global-admin-66,OU=Management,OU=GLOBAL,".$root_dse,
                   #####
                   displayName=>"Global Admin",
                   givenName=>"Global",
                   name=>"global-admin-66",
                   sAMAccountname=>"global-admin-66",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\global\\management\\global-admin-66",
                   unixHomeDirectory=>"/home/schools/global/management/global-admin-66",
                   sn=>"Admin",
                   userPrincipalName => "global-admin-66@".$root_dns,
                   sophomorixAdminClass => "global-admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Global",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "global",
                   sophomorixSchoolname => "global",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "global-admins|global-wifi|global-internet|global-webfilter|global-intranet|global-printing|Domain Admins",
                  });
    # global-admin-666
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=global-admin-666,OU=Management,OU=GLOBAL,".$root_dse,
                   #####
                   displayName=>"Global Admin",
                   givenName=>"Global",
                   name=>"global-admin-666",
                   sAMAccountname=>"global-admin-666",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\global\\management\\global-admin-666",
                   unixHomeDirectory=>"/home/schools/global/management/global-admin-666",
                   sn=>"Admin",
                   userPrincipalName => "global-admin-666@".$root_dns,
                   sophomorixAdminClass => "global-admins",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Global",
                   sophomorixSurnameASCII  => "Admin",
                   sophomorixRole => "administrator",
                   sophomorixSchoolPrefix => "global",
                   sophomorixSchoolname => "global",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   memberOf => "global-admins|global-wifi|global-internet|global-webfilter|global-intranet|global-printing|Domain Admins",
                  });
    ##### Testing the users group
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=global-admins,OU=Management,OU=GLOBAL,".$root_dse,
                   sAMAccountname=>"global-admins",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixStatus=>"P",
                   sophomorixType=>"globaladmins",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "global",
                   memberOf => "",
                  });

    &directory_tree_test("/home/schools",
                         "/home/schools",
                         "/home/schools/abc",
                         "/home/schools/abc/management",
                         "/home/schools/abc/management/admin-abc-666",
                         "/home/schools/abc/management/admin-abc-666/admindir1",
                         "/home/schools/abc/management/admin-abc-666/admindir2",
                         "/home/schools/abc/projects",
                         "/home/schools/abc/students",
                         "/home/schools/bsz",
                         "/home/schools/bsz/management",
                         "/home/schools/bsz/management/admin-bsz-66",
                         "/home/schools/bsz/management/admin-bsz-66/admindir1",
                         "/home/schools/bsz/management/admin-bsz-66/admindir2",
                         "/home/schools/bsz/projects",
                         "/home/schools/bsz/students",
                         "/home/schools/default-school",
                         "/home/schools/default-school/management",
                         "/home/schools/default-school/management/admin-66",
                         "/home/schools/default-school/management/admin-66/admindir1",
                         "/home/schools/default-school/management/admin-66/admindir2",
                         "/home/schools/default-school/management/admin-666",
                         "/home/schools/default-school/management/admin-666/admindir1",
                         "/home/schools/default-school/management/admin-666/admindir2",
                         "/home/schools/default-school/projects",
                         "/home/schools/default-school/students",
                        ); 
    &directory_tree_test("/home/global",
                         "/home/global",
                         "/home/global/management",
                         "/home/global/management/global-admin-66",
                         "/home/global/management/global-admin-66/admindir1",
                         "/home/global/management/global-admin-66/admindir2",
                         "/home/global/management/global-admin-666",
                         "/home/global/management/global-admin-666/admindir1",
                         "/home/global/management/global-admin-666/admindir2",
                         "/home/global/projects",
                         "/home/global/students",
                         "/home/global/teachers",
                        ); 


}




############################################################
# Modify added projects
############################################################
# --mod-admin  
if ($mod_admin==1){
}

############################################################
#  Test modified  projects
############################################################
# --test-mod-admin  
if ($test_mod_admin==1){
    print "\nNothing to do so far (--test-mod-admin), ...\n\n";
}




############################################################
# Kill projects
############################################################
# --kill-admin  
if ($kill_admin==1){
    &run_command("sophomorix-admin $verbose_options --kill admin-bsz-66");
    &run_command("sophomorix-admin $verbose_options --kill admin-abc-666");
    # admin in OU=default-school
    &run_command("sophomorix-admin $verbose_options --kill admin-66");
    &run_command("sophomorix-admin $verbose_options --kill admin-666");
    # admin in OU=default-school
    &run_command("sophomorix-admin $verbose_options --kill global-admin-66");
    &run_command("sophomorix-admin $verbose_options --kill global-admin-666");


}

############################################################
#  Test killed  users, groups, projects
############################################################
# --test-kill-admin  
if ($test_kill_admin==1){
    # users
    &AD_object_nonexist($ldap,$root_dse,"user","admin-bsz-66");
    &AD_object_nonexist($ldap,$root_dse,"user","admin-abc-666");
    &AD_object_nonexist($ldap,$root_dse,"user","admin-66");
    &AD_object_nonexist($ldap,$root_dse,"user","admin-666");
    &AD_object_nonexist($ldap,$root_dse,"user","global-admin-66");
    &AD_object_nonexist($ldap,$root_dse,"user","global-admin-666");
}






&AD_unbind_admin($ldap);



