                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    &run_command("sophomorix-user $verbose_options --webui-dashboard \"Test webui!\" --user maiersa42");
    # Testing change
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "Test Comment!",
                   sophomorixWebuiDashboard => "Test webui!",
                   sophomorixStatus => "A",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    &run_command("sophomorix-user $verbose_options --user-permissions one,two,three --user maiersa42");
    # Testing change
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "Test Comment!",
                   sophomorixWebuiDashboard => "Test webui!",
                   sophomorixUserPermissions => "one|two|three",
                   sophomorixStatus => "A",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });
    &run_command("sophomorix-user $verbose_options --add-user-permissions four,five --user maiersa42");
    # Testing change
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "Test Comment!",
                   sophomorixWebuiDashboard => "Test webui!",
                   sophomorixUserPermissions => "one|two|three|four|five",
                   sophomorixStatus => "A",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    &run_command("sophomorix-user $verbose_options --remove-user-permissions one,two --user maiersa42");
    # Testing change
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "Test Comment!",
                   sophomorixWebuiDashboard => "Test webui!",
                   sophomorixUserPermissions => "three|four|five",
                   sophomorixStatus => "A",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });






    &run_command("sophomorix-user $verbose_options -U --user maiersa42 --remove-user-permissions three,four,five --webui-dashboard \"\" --comment \"created by sophomorix\"");
    # Testing if maiersa42 is feft as before
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    &directory_tree_test("/home/schools",
                         "/home/schools",
                         "/home/schools/bsz",
                         "/home/schools/bsz/management",
                         "/home/schools/bsz/projects",
                         "/home/schools/bsz/students",
                         "/home/schools/bsz/teachers",
                         "/home/schools/bsz/teachers/homes",
                         "/home/schools/bsz/teachers/homes/oe42",
                         "/home/schools/bsz/teachers/homes/oe42/teacher1",
                         "/home/schools/bsz/teachers/homes/oe42/teacher2",
                         "/home/schools/bsz/teachers/homes/wu42",
                         "/home/schools/bsz/teachers/homes/wu42/teacher1",
                         "/home/schools/bsz/teachers/homes/wu42/teacher2",
                         "/home/schools/bsz/teachers/share",
                         "/home/schools/bsz/students/m7ab",
                         "/home/schools/bsz/students/m7ab/homes",
                         "/home/schools/bsz/students/m7ab/share",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir2",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir2",
                         "/home/schools/bsz/students/m8cd",
                         "/home/schools/bsz/students/m8cd/share",
                         "/home/schools/bsz/students/m8cd/homes",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir2",
                         "/home/schools/bsz/students/m8cd/homes/samardze42",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir2",
                         "/home/schools/uni",
                         "/home/schools/uni/management",
                         "/home/schools/uni/projects",
                         "/home/schools/uni/students",
                         "/home/schools/uni/students/12abc",
                         "/home/schools/uni/students/12abc/share",
                         "/home/schools/uni/students/12abc/homes",
                         "/home/schools/uni/students/12abc/homes/lordjo42",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir1",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir2",
                         "/home/schools/uni/students/12abc/homes/blackmri42",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir1",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir2",
                         "/home/schools/uni/teachers",
                         "/home/schools/uni/teachers/homes",
                         "/home/schools/uni/teachers/homes/kep42",
                         "/home/schools/uni/teachers/homes/kep42/teacher1",
                         "/home/schools/uni/teachers/homes/kep42/teacher2",
                         "/home/schools/uni/teachers/homes/gal42",
                         "/home/schools/uni/teachers/homes/gal42/teacher1",
                         "/home/schools/uni/teachers/homes/gal42/teacher2",
                         "/home/schools/uni/teachers/share",
                         "/home/schools/default-school",
                         "/home/schools/default-school/management",
                         "/home/schools/default-school/projects",
                         "/home/schools/default-school/students",
                         "/home/schools/default-school/students/s6ade",
                         "/home/schools/default-school/students/s6ade/share",
                         "/home/schools/default-school/students/s6ade/homes",
                         "/home/schools/default-school/students/s6ade/homes/schneima42",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir1",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir2",
                         "/home/schools/default-school/teachers",
                         "/home/schools/default-school/teachers/homes",
                         "/home/schools/default-school/teachers/homes/sch42",
                         "/home/schools/default-school/teachers/homes/sch42/teacher1",
                         "/home/schools/default-school/teachers/homes/sch42/teacher2",
                         "/home/schools/default-school/teachers/share",
                        ); 
    &directory_tree_test("/home/global",
                         "/home/global",
                         "/home/global/management",
                         "/home/global/projects",
                         "/home/global/students",
                         "/home/global/teachers",
                        ); 
}


############################################################
# Managing sessions --ses
############################################################
if ($ses==1){
    print "Session tests\n";
    &run_command("sophomorix-session $verbose_options --create --supervisor maiersa42 --developer-session 666");
    &run_command("sophomorix-session $verbose_options --create --supervisor maiersa42 --developer-session 777");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                   sophomorixSessions => "666;---;;|777;---;;",
                  });

    &run_command("sophomorix-session $verbose_options --session 666 --participants lordjo42");
    &run_command("sophomorix-session $verbose_options --session 777 --participants lordjo42,blackmri42");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;---;lordjo42;|777;---;lordjo42,blackmri42;",
                  });

    # --remove-participants
    &run_command("sophomorix-session $verbose_options --session 777 --remove-participants blackmri42");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;---;lordjo42;|777;---;lordjo42;",
                  });

    # --remove-participants (removing nonexisting participant)
    &run_command("sophomorix-session $verbose_options --session 777 --remove-participants blackmri42");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;---;lordjo42;|777;---;lordjo42;",
                  });


    # --add-participants (adding already existing participant)
    &run_command("sophomorix-session $verbose_options --session 777 --add-participants lordjo42");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;---;lordjo42;|777;---;lordjo42;",
                  });


    # --add-participants
    &run_command("sophomorix-session $verbose_options --session 666 --add-participants blackmri42");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;---;lordjo42,blackmri42;|777;---;lordjo42;",
                  });

    # --comment
    &run_command("sophomorix-session $verbose_options --session 666 --comment \"Mondays Session\"");
    &run_command("sophomorix-session $verbose_options --session 777 --comment \"No such ;;; allowed\"");
    &AD_test_session_count($ldap,$root_dse,$root_dns,2);

    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Maier",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Maier",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Maier",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",            
                   sophomorixSessions => "666;Mondays Session;lordjo42,blackmri42;|777;No such  allowed;lordjo42;",
                  });

    # --set-exam-mode
    &run_command("sophomorix-session $verbose_options --session 666 --set-exam-mode lordjo42,blackmri42");

    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Jon Lord",
                   givenName=>"Jon",
                   name=>"lordjo42",
                   sAMAccountname=>"lordjo42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\uni\\students\\12abc\\homes\\lordjo42",
                   unixHomeDirectory=>"/home/schools/uni/students/12abc/homes/lordjo42",
                   sn=>"Lord",
                   userPrincipalName => "lordjo42@".$root_dns,
                   sophomorixAdminClass => "uni-12abc",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster23!",
                   sophomorixFirstnameASCII => "Jon",
                   sophomorixSurnameASCII  => "Lord",
                   sophomorixBirthdate  => "22.01.1994",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "uni",
                   sophomorixSchoolname => "uni",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "maiersa42",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unidb2345",
                   userAccountControl => "512",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Richard Blackmore",
                   givenName=>"Richard",
                   name=>"blackmri42",
                   sAMAccountname=>"blackmri42",
                   uidNumber=>"90000",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\uni\\students\\12abc\\homes\\blackmri42",
                   unixHomeDirectory=>"/home/schools/uni/students/12abc/homes/blackmri42",
                   sn=>"Blackmore",
                   userPrincipalName => "blackmri42@".$root_dns,
                   sophomorixAdminClass => "uni-12abc",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Richard",
                   sophomorixSurnameASCII  => "Blackmore",
