    &AD_object_nonexist($ldap,$root_dse,"user","gal42");
    &AD_object_nonexist($ldap,$root_dse,"user","schneima42");
    &AD_object_nonexist($ldap,$root_dse,"user","sch42");
}



&AD_unbind_admin($ldap);



