                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-printing",
                  });

    # --intranet, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --intranet lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });


    #################### wifi
    # --nowifi, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --nowifi lordjo42");
    # # lordjo42
    &AD_test_object({ldap=>$ldap,
                    dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --wifi, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --wifi lordjo42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --nowifi, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --nowifi lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # --wifi, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --wifi lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });


    #################### webfilter
    # --nowebfilter, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --nowebfilter lordjo42");
    # # lordjo42
    &AD_test_object({ldap=>$ldap,
                    dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --webfilter, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --webfilter lordjo42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --nowebfilter, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --nowebfilter lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-intranet|uni-printing",
                  });

    # --webfilter, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --webfilter lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });


    #################### printing
    # --noprinting, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --noprinting lordjo42");
    # # lordjo42
    &AD_test_object({ldap=>$ldap,
                    dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --printing, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --printing lordjo42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # # --noprinting, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --noprinting lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet",
                  });

    # --printing, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --printing lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });


    #################### admins
    # # --admins, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --admins lordjo42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing|uni-admins",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # --noadmins, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --noadmins lordjo42");
    # # lordjo42
    &AD_test_object({ldap=>$ldap,
                    dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    # --admins, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --admins lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing|uni-admins",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing|uni-admins",
                  });

    # # --noadmins, 2 user
    &run_command("sophomorix-managementgroup $verbose_options --noadmins lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });


    #################### manangement options combined
    # all options
     &run_command("sophomorix-managementgroup $verbose_options --admins lordjo42,blackmri42 --noprinting lordjo42,blackmri42 --nointranet lordjo42,blackmri42 --nowebfilter lordjo42,blackmri42 --nointernet lordjo42,blackmri42 --nowifi lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-admins",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-admins",
                  });

    &run_command("sophomorix-managementgroup $verbose_options --noadmins lordjo42,blackmri42 --printing lordjo42,blackmri42 --intranet lordjo42,blackmri42 --webfilter lordjo42,blackmri42 --internet lordjo42,blackmri42 --wifi lordjo42,blackmri42");
    # lordjo42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"lordjo42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });
    # blackmri42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=blackmri42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
                   #####
                   sAMAccountname=>"blackmri42",
                   memberOf => "uni-12abc|uni-wifi|uni-internet|uni-webfilter|uni-intranet|uni-printing",
                  });

    &directory_tree_test("/home/schools",
                         "/home/schools",
                         "/home/schools/bsz",
                         "/home/schools/bsz/management",
                         "/home/schools/bsz/projects",
                         "/home/schools/bsz/students",
                         "/home/schools/bsz/teachers",
                         "/home/schools/bsz/teachers/homes",
                         "/home/schools/bsz/teachers/homes/oe42",
                         "/home/schools/bsz/teachers/homes/oe42/teacher1",
                         "/home/schools/bsz/teachers/homes/oe42/teacher2",
                         "/home/schools/bsz/teachers/homes/wu42",
                         "/home/schools/bsz/teachers/homes/wu42/teacher1",
                         "/home/schools/bsz/teachers/homes/wu42/teacher2",
                         "/home/schools/bsz/teachers/share",
                         "/home/schools/bsz/students/m7ab",
                         "/home/schools/bsz/students/m7ab/homes",
                         "/home/schools/bsz/students/m7ab/share",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir2",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir2",
                         "/home/schools/bsz/students/m8cd",
                         "/home/schools/bsz/students/m8cd/share",
                         "/home/schools/bsz/students/m8cd/homes",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir2",
                         "/home/schools/bsz/students/m8cd/homes/samardze42",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir2",
                         "/home/schools/uni",
                         "/home/schools/uni/management",
                         "/home/schools/uni/projects",
                         "/home/schools/uni/students",
                         "/home/schools/uni/students/12abc",
                         "/home/schools/uni/students/12abc/share",
                         "/home/schools/uni/students/12abc/homes",
                         "/home/schools/uni/students/12abc/homes/lordjo42",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir1",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir2",
                         "/home/schools/uni/students/12abc/homes/blackmri42",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir1",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir2",
                         "/home/schools/uni/teachers",
                         "/home/schools/uni/teachers/homes",
                         "/home/schools/uni/teachers/homes/kep42",
                         "/home/schools/uni/teachers/homes/kep42/teacher1",
                         "/home/schools/uni/teachers/homes/kep42/teacher2",
                         "/home/schools/uni/teachers/homes/gal42",
                         "/home/schools/uni/teachers/homes/gal42/teacher1",
                         "/home/schools/uni/teachers/homes/gal42/teacher2",
                         "/home/schools/uni/teachers/share",
                         "/home/schools/default-school",
                         "/home/schools/default-school/management",
                         "/home/schools/default-school/projects",
                         "/home/schools/default-school/students",
                         "/home/schools/default-school/students/s6ade",
                         "/home/schools/default-school/students/s6ade/share",
                         "/home/schools/default-school/students/s6ade/homes",
                         "/home/schools/default-school/students/s6ade/homes/schneima42",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir1",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir2",
                         "/home/schools/default-school/teachers",
                         "/home/schools/default-school/teachers/homes",
                         "/home/schools/default-school/teachers/homes/sch42",
                         "/home/schools/default-school/teachers/homes/sch42/teacher1",
                         "/home/schools/default-school/teachers/homes/sch42/teacher2",
                         "/home/schools/default-school/teachers/share",
                        ); 
    &directory_tree_test("/home/global",
                         "/home/global",
                         "/home/global/management",
                         "/home/global/projects",
                         "/home/global/students",
                         "/home/global/teachers",
                        ); 
}


############################################################
# Moving users --update
############################################################
if ($cp_update==1){
    # copy sophomorix.update
    &run_command("cp -v $file_update_test $file_update");
}

if ($update==1 or $test_update==1){
    if ($update==1){
        # copy sophomorix.update
        &run_command("cp -v $file_update_test $file_update");
        &run_command("sophomorix-update -i");
        &run_command("sophomorix-update $verbose_options");
    }

    ##### Testing the users
    # maiersa42 ->  surname
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Mayer",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/maiersa42",
                   sn=>"Mayer",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Mayer",
                   sophomorixBirthdate => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    # muellegr42 -> birthday
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=muellegr42,OU=m7ab,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Gregor Müller",
                   givenName=>"Gregor",
                   name=>"muellegr42",
                   sAMAccountname=>"muellegr42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m7ab\\homes\\muellegr42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m7ab/homes/muellegr42",
                   sn=>"Müller",
                   userPrincipalName => "muellegr42@".$root_dns,
                   sophomorixAdminClass => "bsz-m7ab",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster23!",
                   sophomorixFirstnameASCII => "Gregor",
                   sophomorixSurnameASCII  => "Mueller",
                   sophomorixBirthdate  => "12.12.1989",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid2345",
                   userAccountControl => "512",
                   memberOf => "bsz-m7ab|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });

    # samardze42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=samardze42,OU=m8cd,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Schellko Samardžić",
                   givenName=>"Schellko",
                   name=>"samardze42",
                   sAMAccountname=>"samardze42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\m8cd\\homes\\samardze42",
                   unixHomeDirectory=>"/home/schools/bsz/students/m8cd/homes/samardze42",
                   sn=>"Samardžić",
                   userPrincipalName => "samardze42@".$root_dns,
                   sophomorixAdminClass => "bsz-m8cd",
                   sophomorixExitAdminClass => "unknown",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Schellko",
                   sophomorixSurnameASCII  => "Samardzic",
                   sophomorixBirthdate  => "22.04.1992",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid4567",
                   userAccountControl => "512",
                   memberOf => "bsz-m8cd|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });
    &directory_tree_test("/home/schools",
                         "/home/schools",
                         "/home/schools/bsz",
                         "/home/schools/bsz/management",
                         "/home/schools/bsz/projects",
                         "/home/schools/bsz/students",
                         "/home/schools/bsz/teachers",
                         "/home/schools/bsz/teachers/homes",
                         "/home/schools/bsz/teachers/homes/oe42",
                         "/home/schools/bsz/teachers/homes/oe42/teacher1",
                         "/home/schools/bsz/teachers/homes/oe42/teacher2",
                         "/home/schools/bsz/teachers/homes/wu42",
                         "/home/schools/bsz/teachers/homes/wu42/teacher1",
                         "/home/schools/bsz/teachers/homes/wu42/teacher2",
                         "/home/schools/bsz/teachers/share",
                         "/home/schools/bsz/students/m7ab",
                         "/home/schools/bsz/students/m7ab/homes",
                         "/home/schools/bsz/students/m7ab/share",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/maiersa42/dir2",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir1",
                         "/home/schools/bsz/students/m7ab/homes/muellegr42/dir2",
                         "/home/schools/bsz/students/m8cd",
                         "/home/schools/bsz/students/m8cd/share",
                         "/home/schools/bsz/students/m8cd/homes",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/jonsonad42/dir2",
                         "/home/schools/bsz/students/m8cd/homes/samardze42",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir1",
                         "/home/schools/bsz/students/m8cd/homes/samardze42/dir2",
                         "/home/schools/uni",
                         "/home/schools/uni/management",
                         "/home/schools/uni/projects",
                         "/home/schools/uni/students",
                         "/home/schools/uni/students/12abc",
                         "/home/schools/uni/students/12abc/share",
                         "/home/schools/uni/students/12abc/homes",
                         "/home/schools/uni/students/12abc/homes/lordjo42",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir1",
                         "/home/schools/uni/students/12abc/homes/lordjo42/dir2",
                         "/home/schools/uni/students/12abc/homes/blackmri42",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir1",
                         "/home/schools/uni/students/12abc/homes/blackmri42/dir2",
                         "/home/schools/uni/teachers",
                         "/home/schools/uni/teachers/homes",
                         "/home/schools/uni/teachers/homes/kep42",
                         "/home/schools/uni/teachers/homes/kep42/teacher1",
                         "/home/schools/uni/teachers/homes/kep42/teacher2",
                         "/home/schools/uni/teachers/homes/gal42",
                         "/home/schools/uni/teachers/homes/gal42/teacher1",
                         "/home/schools/uni/teachers/homes/gal42/teacher2",
                         "/home/schools/uni/teachers/share",
                         "/home/schools/default-school",
                         "/home/schools/default-school/management",
                         "/home/schools/default-school/projects",
                         "/home/schools/default-school/students",
                         "/home/schools/default-school/students/s6ade",
                         "/home/schools/default-school/students/s6ade/share",
                         "/home/schools/default-school/students/s6ade/homes",
                         "/home/schools/default-school/students/s6ade/homes/schneima42",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir1",
                         "/home/schools/default-school/students/s6ade/homes/schneima42/dir2",
                         "/home/schools/default-school/teachers",
                         "/home/schools/default-school/teachers/homes",
                         "/home/schools/default-school/teachers/homes/sch42",
                         "/home/schools/default-school/teachers/homes/sch42/teacher1",
                         "/home/schools/default-school/teachers/homes/sch42/teacher2",
                         "/home/schools/default-school/teachers/share",
                        ); 
    &directory_tree_test("/home/global",
                         "/home/global",
                         "/home/global/management",
                         "/home/global/projects",
                         "/home/global/students",
                         "/home/global/teachers",
                        ); 
}


############################################################
# Moving users --move
############################################################
if ($cp_move==1){
    # copy sophomorix.move
    &run_command("cp -v $file_move_test $file_move");
}

if ($move==1 or $test_move==1){
    if ($move==1){
        # copy sophomorix.move
        &run_command("cp -v $file_move_test $file_move");
        &run_command("sophomorix-move -i");
        &run_command("sophomorix-move $verbose_options");
    }

    ##### Testing the users
    # maiersa42
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=maiersa42,OU=attic,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   #####
                   displayName=>"Sarina Mayer",
                   givenName=>"Sarina",
                   name=>"maiersa42",
                   sAMAccountname=>"maiersa42",
                   uidNumber=>"-1",
                   homeDrive=>"H:",
                   homeDirectory=>"\\\\linuxmuster.local\\bsz\\students\\attic\\homes\\maiersa42",
                   unixHomeDirectory=>"/home/schools/bsz/students/attic/homes/maiersa42",
                   sn=>"Mayer",
                   userPrincipalName => "maiersa42@".$root_dns,
                   sophomorixAdminClass => "bsz-attic",
                   sophomorixExitAdminClass => "bsz-m7ab",
                   sophomorixFirstPassword => "Muster!",
                   sophomorixFirstnameASCII => "Sarina",
                   sophomorixSurnameASCII  => "Mayer",
                   sophomorixBirthdate  => "25.01.1991",
                   sophomorixRole => "student",
                   sophomorixSchoolPrefix => "bsz",
                   sophomorixSchoolname => "bsz",
                   sophomorixCreationDate => "exists",
                   sophomorixTolerationDate => "default",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "U",
                   sophomorixUnid => "unid1234",
                   userAccountControl => "512",
                   memberOf => "bsz-attic|bsz-wifi|bsz-internet|bsz-webfilter|bsz-intranet|bsz-printing",
                  });
    ##### Testing the users class
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=bsz-attic,OU=attic,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"bsz-attic",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixType=>"adminclass",
                   description=>"bsz-attic",
                   sophomorixAddQuota=>"---",
                   sophomorixAddMailQuota=>"---",
                   sophomorixQuota=>"---",
                   sophomorixMailQuota=>"-1",
                   sophomorixMailAlias=>"FALSE",
                   sophomorixMailList=>"FALSE",
                   sophomorixStatus=>"P",
                   sophomorixJoinable=>"TRUE",
                   sophomorixMaxMembers=>"0",
                   sophomorixMembers=>"maiersa42",
                   sophomorixAdmins=>"",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "bsz",
                   memberOf => "bsz-students",
                   member => "maiersa42",
                  });
    ##### Testing the users ou-students group
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=bsz-students,OU=Students,OU=bsz,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"bsz-students",
                   gidNumber=>"-1",
                   sophomorixCreationDate => "exists",
                   sophomorixStatus=>"P",
                   sophomorixType=>"ouclass",
                   sophomorixHidden=>"FALSE",
                   sophomorixSchoolname => "bsz",
                   memberOf => "global-students",
                  });


