                   memberOf => "global-webfilter",
                   member => "gal42",
                  });
    &AD_test_object({ldap=>$ldap,
                   dn=>"CN=ghs-intranet,OU=Management,OU=ghs,OU=SCHOOLS,".$root_dse,
                   sAMAccountname=>"ghs-intranet",
