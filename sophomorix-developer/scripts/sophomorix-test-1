                  });


    #################### intranet
    # --nointranet, 1 user
     &run_command("sophomorix-managementgroup $verbose_options --nointranet lordjo42");
    # # lordjo42
    &AD_test_object({ldap=>$ldap,
                    dn=>"CN=lordjo42,OU=12abc,OU=Students,OU=uni,OU=SCHOOLS,".$root_dse,
