                   sophomorixTolerationDate => "exists",
                   sophomorixDeactivationDate => "default",
                   sophomorixComment => "created by sophomorix",
                   sophomorixExamMode => "---",
                   sophomorixStatus => "T",
                   sophomorixUnid => "---",
