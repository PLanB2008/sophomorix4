                   sophomorixExitAdminClass => "unknown",
#                   sophomorixFirstPassword => "LinuxMuster!",
                   sophomorixFirstnameASCII => "Theodor Elmar",
                   sophomorixSurnameASCII  => "Bjarnason",
                   sophomorixBirthdate  => "04.03.1987",
                   sophomorixRole => "teacher",
